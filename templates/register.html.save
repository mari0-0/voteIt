{% extends 'base.html' %} 
{% load static %}

{% block title %} Vote It | Vote{%endblock title %} 

{% block styles %}
<style>
  .btn-inline {
    font-size: 1.7rem;
    position: absolute;
    top: 0;
    border-radius: 5px;
    right: 20px;
    z-index: 2;
    border: none;
    top: 4px;
    height: 30px;
    cursor: pointer;
    color: #66d37e;
    background-color: transparent;
    transform: translateX(100px);
    transform: translateY(5px);
  }
  button:disabled {
    color: rgba(0, 0, 0, 0.25);
  }
  input:disabled {
    background-color: #f0f0f0;
    color: #999;
    cursor: not-allowed;
  }
  .verify:disabled {
    background-color: #ccc;
    color: #666;
    opacity: 0.6;
    border-color: #666 !important;
  }
</style>
{% endblock styles %} {% block main %}

<div class="container-wrap">
  <div id="fh5co-contact">
    <div class="row animate-box">
      <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
        <h2 style="font-size: 4rem">Register</h2>
        <p>Empower your voice — register to make a difference today.</p>
      </div>
    </div>
    <form action="" method="post" id="form">
      {% csrf_token %}
      <div class="row animate-box">
        <div class="col-md-6 col-md-offset-3">
          <div class="col-md-12 animate-box">
            <div class="row">
              <input
                class="form-control"
                type="email"
                id="email1"
                placeholder="Email"
                name="email1"
                style="visibility: hidden;"
              />
              {% if msg_success %}
              <p id="error-msg" class="text-center" style="color: #66d37e">
                {{msg_success}}
              </p>
              {% endif %} {% if msg %}
              <p id="error-msg" class="text-center" style="color: #ff0000">
                {{msg}}
              </p>
              {% endif %}
              {% include 'messages.html' %}

              <p id="error-msg" class="text-center" style="color: #ff0000"></p>

              <div class="col-md-6">
                <div class="form-group">
                  <input
                    type="text"
                    class="form-control"
                    placeholder="First Name"
                    name="first_name"
                    required
                  />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Last Name"
                    name="last_name"
                    required
                  />
                </div>
              </div>

              <div class="col-md-12">
                <div class="form-group">
                  <!-- <input
                    type="date"
                    id="dob"
                    class="form-control"
                    name="date_of_birth"
                    max="" 
                    value="Date of Birth"
                    required
                  /> -->
                  <input
                    placeholder="Date of Birth"
                    type="text"
                    onfocus="(this.type='date')"
                    onblur="formatDate(this)"
                    id="dob"
                    class="form-control"
                    name="date_of_birth"
                    max="" 
                    value=""
                    required 
                  />
                </div>
              </div>

              <div class="col-md-12" style="margin-bottom: 3rem">
                <input
                  class="form-control"
                  type="email"
                  id="email"
                  placeholder="Email"
                  name="email"
                  required
                />
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <input
                    type="password"
                    class="form-control"
                    placeholder="OTP"
                    name="otp"
                    required
                  />
                  <button
                    class="btn-inline"
                    type="button"
                    id="clear"
                    onclick="send_otp(this)"
                  >
                    Send OTP
                  </button>
                </div>
              </div>


              <div class="col-md-12">
                <div class="form-group">
                  <input type="checkbox" id="ageCheck" name="ageCheck" required>
                  <label for="ageCheck">I Certify and attest that the following statements are true:</label>
                  <ul>
             
                    <li>I have provided accurate personal information, including my full name, email address, and date of birth.</li> 
                    <li>I am at least 18 years old on or before the date of the election, making me eligible to vote.</li>
                    <li>I understand that my registration is contingent upon verifying my identity through an OTP sent to my registered email.</li>
                    <li>I understand that the voting period is defined by the VotingCountdown and that I must cast my vote before the deadline.</li>
                    <li>I acknowledge that any violation of the voting rules may result in disqualification from this election.</li>
 
                  </ul>
                </div>
              </div>

              <div class="col-md-12">
                <div
                  class="form-group"
                  style=
                    display: flex;
                    justify-content: center;
                    align-items: center;
                  "
                >
                  <input
                    type="submit"
                    id="verify"
                    value="Register"
                    class="btn btn-primary btn-modify verify"
                    disabled
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  // Set the max date dynamically to today's date
  document.getElementById('dob').max = new Date().toISOString().split('T')[0];

  // Function to format the date to MM/DD/YYYY on blur
  function formatDate(input) {
    const date = new Date(input.value);
    if (!isNaN(date)) {
      const formattedDate = (date.getMonth() + 1).toString().padStart(2, '0') + '/' +
                            date.getDate().toString().padStart(2, '0') + '/' +
                            date.getFullYear();
      input.type = 'text';
      input.value = formattedDate;
    } else {
      input.type = 'text'; // Revert back to text input if the date is invalid
    }
  }
</script>

<script>
  
  isOtpSent = false;

  function send_otp(button) {
    button.textContent = "Sending...";
    button.disabled = true;
    button.classList.add("disabled");

    p = document.getElementById("error-msg");
    p.textContent = "";

    email = document.getElementById("email");
    email.disabled = true;
    value = email.value;
    console.log(value)
    let countdownSeconds = 60;
    // Send a GET request to the /api/data endpoint
    fetch(`/send_opt_api?email=${value}`)
      .then((response) => {
        if (response.ok) {
          return response.json();
        }
      })
      .then((data) => {
        console.log(data);
        if(data['error'] == "EmailAlreadyExist"){
          p.textContent = "Email already exists.";
          email.disabled = false;
          button.textContent = "Send OTP";
          button.disabled = false;
          isOtpSent = false;
        } else if (data["error"] == "InvalidEmail") {
          p.textContent = "Please enter only college email address.";
          email.disabled = false;
          button.textContent = "Send OTP";
          button.disabled = false;
          isOtpSent = false;
        } else {
          isOtpSent = true;
          document.getElementById("email1").value = value;
		      console.log(document.getElementById("email1").value);
          button.textContent = `Resend in ${countdownSeconds}`;
          button.disabled = true;
          button.classList.add("disabled");

          if(ageCheck.checked) {
            document.getElementById("verify").disabled = false;
          }

          const countdownInterval = setInterval(() => {
            countdownSeconds--;
            button.textContent = `Resend in ${countdownSeconds}`;

            if (countdownSeconds === 0) {
              clearInterval(countdownInterval);
              button.textContent = "Send OTP";
              button.disabled = false;
              button.classList.remove("disabled");
            }
          }, 1000);
        }
      });
  }


  // Get the current date
  const today = new Date();
  
  // Subtract 18 years from today's date
  const minAge = new Date(today.getFullYear() - 18, today.getMonth(), today.getDate());
  
  // Format the date to YYYY-MM-DD
  const formattedDate = minAge.toISOString().split('T')[0];
  
  // Set the max attribute of the date input
  document.getElementById('dob').setAttribute('max', formattedDate);

  // Enable submit button only if the checkbox is checked
  const ageCheck = document.getElementById('ageCheck');
  const submitBtn = document.getElementById('verify');

  ageCheck.addEventListener('change', function() {
    submitBtn.disabled = !ageCheck.checked || !isOtpSent;
  });
</script>


{% endblock main %}
